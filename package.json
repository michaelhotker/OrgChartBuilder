{
  "name": "org-chart-builder",
  "version": "1.0.0",
  "description": "Org Chart Viewer - Visualize organizational hierarchies from Excel files",
  "type": "module",
  "main": "electron/main.js",
  "author": "Michael",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "vite & sleep 2 && electron .",
    "electron:build": "vite build && electron-builder",
    "electron:build:win": "vite build && electron-builder --win"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-organizational-chart": "^2.1.0",
    "react-router-dom": "^6.21.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "vite": "^5.0.8"
  },
  "build": {
    "appId": "com.orgchart.viewer",
    "productName": "Org Chart Viewer",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
